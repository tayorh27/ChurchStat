<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/sapp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Category"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/sapp_nstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/sapp_name"
            android:layout_margin="2dp"
            android:text="date"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <RatingBar
            android:id="@+id/sapp_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@+id/sapp_name"
            android:layout_margin="2dp" />

        <TextView
            android:id="@+id/sapp_dt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sapp_mode"
            android:layout_margin="2dp"
            android:textColor="@color/md_material_blue_600"
            android:text="Comment"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_improves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sapp_dt"
            android:layout_margin="2dp"
            android:textColor="@color/material_red_500"
            android:text="Improves"
            android:textSize="15sp" />

